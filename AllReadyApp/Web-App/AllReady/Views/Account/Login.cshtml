@using System.Collections.Generic
@using Microsoft.AspNet.Http
@using Microsoft.AspNet.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <section>
            <h4>Login with these services.</h4>
            <hr />
            @{
                var loginProviders = SignInManager.GetExternalAuthenticationSchemes().ToList();
                if (loginProviders.Count == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form asp-controller="Account" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                        <div>
                            <p>
                                @foreach (var provider in loginProviders)
                                {
                                    <div class="row">
                                        <div class="col-md-2"></div>
                                        <div class="col-md-8">
                                            <button type="submit" class="btn btn-default btn-block" name="provider" value="@provider.AuthenticationScheme" title="Log in using your @provider.DisplayName account">
                                                <span class="fa fa-2x fa-@((provider.AuthenticationScheme.ToLower() == "microsoft") ? "windows" : provider.AuthenticationScheme.ToLower())"></span><span class="btn-authenticator-txt">@provider.AuthenticationScheme</span>
                                            </button><br /><br />
                                        </div>
                                        <div class="col-md-2"></div>
                                    </div>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
    <div class="col-md-3"></div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
