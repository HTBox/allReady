@model IEnumerable<AllReady.Areas.Admin.Models.CampaignSummaryModel>
@{ ViewData["Title"] = "Campaigns - Admin"; }

<div class="row">
    <div class="col-12">
        <ol class="breadcrumb">
            <li>Campaigns</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <h2>@ViewData["Title"]</h2>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-controller="Campaign" asp-action="Create" asp-route-area="Admin" class="btn">Create New</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenantName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
            </tr>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-controller="Campaign" asp-action="Details" asp-route-area="Admin" asp-route-id="@item.Id">@item.Name</a>
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <br/><span class="text-muted">@item.Description</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenantName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                </tr>
            }
        </table>

    </div>
</div>
