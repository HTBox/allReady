@model AllReady.Models.Activity

@{  ViewBag.Title = "Create activity"; }

<h2>@ViewBag.Title</h2>
<form asp-action="Create" asp-controller="Activity">
    <div class="form-horizontal">
        <h4>Activity</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CampaignId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="CampaignId" asp-items="ViewBag.Campaigns" class="form-control" ></select>
                <span asp-validation-for="CampaignId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TenantId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="TenantId" asp-items="ViewBag.Tenants" class="form-control"></select>
                <span asp-validation-for="TenantId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StartDateTimeUtc" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="StartDateTimeUtc" class="form-control datepicker"/>
                <span asp-validation-for="StartDateTimeUtc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EndDateTimeUtc" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="EndDateTimeUtc" class="form-control datepicker" />
                <span asp-validation-for="EndDateTimeUtc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" value="Create" class="btn">Create</button>
            </div>
        </div>
    </div>
</form>

<div>
    <a class="btn" asp-controller="Activity" asp-action="Index">Back to List</a>
</div>