@model AllReady.Areas.Admin.ViewModels.CampaignDetailViewModel

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Activity" asp-action="Create" asp-route-area="Admin" asp-route-campaignId="@Model.Id"
           class="btn">Create New</a>
    </div>
</div>

<div class="row">
    <div class="cold-md-12">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Start
                </th>
                <th>
                    End
                </th>
            </tr>
            @foreach (var item in Model.Activities) {
                <tr>
                    <td>
                        <a asp-controller="Activity" asp-action="Details" asp-route-area="Admin" asp-route-id="@item.Id">@item.Name</a> 
                        @if (!string.IsNullOrEmpty(item.Description))
                        {
                            <br />
                            <span class="text-muted">@item.Description</span>
                        }
                    </td>
                    <td>
                        @item.StartDateTime.ToShortDateString()
                    </td>
                    <td>
                        @item.EndDateTime.ToShortDateString()
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

