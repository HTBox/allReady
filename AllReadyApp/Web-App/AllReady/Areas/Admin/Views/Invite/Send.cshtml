@model AllReady.Areas.Admin.ViewModels.Invite.InviteViewModel

@{
    string formAction;
    if (Model != null && Model.InviteType == AllReady.Areas.Admin.ViewModels.Invite.InviteType.EventManagerInvite)
    {
        ViewData["Title"] = "Send Event Manager Invite";
        formAction = "SendEventManagerInvite";
    }
    else
    {
        ViewData["Title"] = "Send Campaign Manager Invite";
        formAction = "SendCampaignManagerInvite";
    }
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-12">
        <form class="form-horizontal" asp-controller="Invite" asp-area="Admin" asp-action="@formAction" method="post" role="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InviteeEmailAddress" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="InviteeEmailAddress" class="form-control" />
                    <span asp-validation-for="InviteeEmailAddress" class="text-danger"></span>
                </div> 
            </div>

            <div class="form-group">
                <label asp-for="CustomMessage" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="CustomMessage" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="CustomMessage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Send</button>
                </div>
            </div>
            
            <input type="hidden" asp-for="InviteType" />
        </form>
    </div>
</div>