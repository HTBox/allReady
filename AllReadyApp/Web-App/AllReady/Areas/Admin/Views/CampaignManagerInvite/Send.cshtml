@using AllReady.Constants
@model AllReady.Areas.Admin.ViewModels.ManagerInvite.CampaignManagerInviteViewModel

@{
    ViewData["Title"] = "Send Campaign Manager Invite";
}

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li><a asp-controller="Campaign" asp-action="Index" asp-area="@AreaNames.Admin">Campaigns</a></li>
            <li><a asp-controller="Campaign" asp-action="Details" asp-route-id="@Model.CampaignId" asp-area="@AreaNames.Admin">@Model.CampaignName</a></li>
            <li>Create Campaign Manager Invite</li>
        </ol>
    </div>
</div>

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-12">
        <form class="form-horizontal" asp-controller="CampaignManagerInvite" asp-area="@AreaNames.Admin" asp-action="Send" method="post" role="form">
            <input type="hidden" asp-for="@Model.CampaignName" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group required">
                <label asp-for="InviteeEmailAddress" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="InviteeEmailAddress" class="form-control" />
                    <span asp-validation-for="InviteeEmailAddress" class="text-danger"></span>
                </div> 
            </div>

            <div class="form-group">
                <label asp-for="CustomMessage" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <textarea asp-for="CustomMessage" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="CustomMessage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-default">Send</button>
                </div>
            </div>
        </form>
    </div>
</div>
